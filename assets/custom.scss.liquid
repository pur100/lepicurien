// HEADER
.header {
  .promo_banner {
    background-color: black;
    p {
      color:white;
      letter-spacing: 0;
      font-weight: bold;
    }
  }

  .mini_cart {
    background-color: transparent;
    position: relative;
    border-left: 1px solid #C4C4C4;
  }

  .currencies {
    border-right: 1px solid #C4C4C4 !important;
  }

  .top_bar {
    border-bottom: 1px solid #C4C4C4;

    .left {
      a {
        text-decoration: underline;
        letter-spacing: O;
      }
    }
  }

  .top_bar, .main_nav {
    padding: 0 50px 0px 50px;

    .logo {
      padding-left: 10px !important;
    }
  }

  .cart_count {
    background-color: black;
    color: white;
    border-radius: 100px;
    height: 17px;
    line-height: 1.4 !important;
    width: 17px;
    position: absolute;
    left: 26px;
    top: 21px;
    font-weight: bold;
  }

}
