{% comment %}
** Main blog page - default view **
- Template section
- Uses blocks
{% endcomment %}

{% if section.settings.wide_display == false %}
<div class="container">
  <div class="sixteen columns">
{% endif %}

{% if section.settings.image != nil %}
  <header class="banner center page-banner dark-overlay-{{ section.settings.image_darken }} full-width--{{ section.settings.wide_display }}">
    {% include 'image-element', image: section.settings.image, alt: section.settings.image.alt, stretch_width: true %}
    {% if current_tags %}
      <div class="caption captionOverlay--true">
        <h1 class="headline">{{ current_tags }}</h1>
      </div>
    {% else %}
      <div class="caption captionOverlay--true">
        <h1 class="headline">{{ blog.title }}</h1>
        <p class="subtitle">{{ section.settings.subtitle }}</p>
      </div>
    {% endif %}
  </header>
{% endif %}

{% if section.settings.wide_display == false %}
  </div>
</div>
{% endif %}

<a name="pagecontent" id="pagecontent"></a>

<div class="container main content">



{% paginate blog.articles by section.settings.blog_posts_per_page %}
  <div class="blog-header clearfix">

    {% unless section.settings.image != nil %}
      <div class="eight columns">
          {% if current_tags %}
            <h1 class="blog-title blog-tags--true">
              <a href="/blogs/{{ blog.handle }}/tagged/{{ current_tags | handleize }}" title="{{ blog.title | escape }}">{{ current_tags }}</a>
            </h1>
          {% else %}
            <h1 class="blog-title">
              {{ blog.title }}
            </h1>
            {% if section.settings.subtitle %}
              <p class="subtitle">{{ section.settings.subtitle }}</p>
            {% endif %}
          {% endif %}
        </h1>

      </div>
    {% endunless %}

    <div class="eight columns section_select medium-down--one-half">
      {% if section.settings.blog_tags %}
          <select name="tag_filter" id="blog_filter" class="blog_filter">
            <option {% unless current_tags %}selected="selected"{% endunless %} value="{{ blog.url }}">{{ 'blogs.general.view_all' | t }}</option>
            {% for tag in blog.all_tags %}
              <option {% if current_tags contains tag %}selected="selected"{% endif %} value="/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}">{{ tag }}</option>
            {% endfor %}
          </select>
      {% endif %}
    </div>
    {% unless section.settings.image != nil %}
      <div class="sixteen columns">
        <div class="feature_divider"></div>
      </div>
    {% endunless %}
  </div>

  {% comment %}Check to see if sidebar should be enabled{% endcomment %}
  {% if section.blocks.size > 0 %}
    {% assign sidebar = true %}
  {% else %}
    {% assign sidebar = false %}
  {% endif %}

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "itemListElement": [
        {% for article in blog.articles %}
          {
            "@type": "ListItem",
            "position": "{{ forloop.index | json }}",
            "url": "{{ shop.url }}{{ article.url }}",
            "name": "{{ article.title }}"
          } {%- unless forloop.last -%},{%- endunless -%}
        {% endfor %}
      ]
    }
  </script>

  {% include "blog-sidebar", blog_handle: blog.handle %}


  <div class="{% if sidebar %}twelve medium-down--one-half {% else %}sixteen{% endif %} columns equal-columns--outside-trim equal-columns--clear">

    {% include 'include-featured-blog' %}


    <h2 class="title" style="margin-bottom: 20px;">{{ section.settings.blog_main_title }}</h2>
    <div class="articles_container">
      {% for article in blog.articles %}
        {% if section.settings.blog_posts_per_row == 1 %}
          <div class="article-wrap">


          {% if article.image %}
            <div class="one-half columns alpha article_image medium-down--one-half">
              <a href="{{ article.url }}" title="{{ article.title | escape }}">
                {% include 'image-element', image: article.image, alt: image.alt %}
              </a>
            </div>
            <div class="one-half columns omega article medium-down--one-half">
          {% else %}
            <div class="{% if sidebar %}eight{% else %}sixteen{% endif %} columns alpha omega article">
          {% endif %}
        {% else %}
        <div class="
            {% if section.settings.blog_posts_per_row == 2 %}
              eight columns
            {% elsif section.settings.blog_posts_per_row == 3 %}
              one-third column
            {% else %}
              four columns
            {% endif %}
            {% if section.settings.blog_posts_per_row == 1 %}
              medium-down--one-half
            {% else %}
              medium-down--one-half small-down--one-half
            {% endif %}
            article
          ">

          {% for tag in article.tags %}
              {% if tag contains 'cdn' %}
                <a href="{{ article.url }}" title="{{ article.title | escape }}">
                  <img src="{{ tag }}" alt="">
                </a>
              {% endif %}
          {% endfor %}


        {% endif %}


          <h2 class="article__title"><a href="{{ article.url }}">{{ article.title }}</a></h2>

          <p class="blog_meta">
            {% if section.settings.blog_author %}
              <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
            {% endif %}

            {% if section.settings.blog_date %}
              <span>{{ article.published_at | date: format: "month_day_year" }}</span>
            {% endif %}

            {% if section.settings.read_time %}
              {% include 'include-read-time' %}
            {% endif %}

            {% if section.settings.blog_comment_count %}
              {% if settings.disqus_enabled %}
                <span>
                  <a href="{{ article.url }}#disqus_thread" data-disqus-identifier="{{ article.id }}" class="disqus-comment-count">{{ 'blogs.counts.comments_with_count' | t: count: 0 }}</a>
                </span>
              {% elsif article.comments_enabled? and article.comments_count > 0 %}
                <span>
                  <a href="{{ article.url }}#comments">{{ 'blogs.counts.comments_with_count' | t: count: article.comments_count }}</a>
                </span>
              {% endif %}
            {% endif %}
          </p>
          {% if section.settings.blog_tags %}
            <div class="blog_meta tags">
              {% for tag in article.tags %}
                <span><a href="{{ shop.url }}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" title="{{ blog.title }} {{ 'blogs.general.tagged' | t }} {{ tag | escape }}">{{ tag }}</a></span>
              {% endfor %}
            </div>
          {% endif %}

          {% if article.excerpt != blank %}
            <div class="excerpt"> {{ article.excerpt }}</div>
          {% endif %}
          {% if section.settings.read_more_link %}
            <a href="{{ article.url }}" title="{{ article.title | escape }}" {% if settings.read_more_style == 'button' %}class="action_button continue-button"{% endif %}>{{ 'blogs.general.continue_reading_html' | t }}</a>
          {% endif %}
        </div>
        {% if section.settings.blog_posts_per_row == 2 %}
          {% cycle "article_row": '', '<br class="clear" />' %}
        {% elsif section.settings.blog_posts_per_row == 3 %}
          {% cycle "article_row": '', '', '<br class="clear" />' %}
        {% elsif section.settings.blog_posts_per_row == 4 %}
          {% cycle "article_row": '', '', '', '<br class="clear" />' %}
        {% else %}
          <br class="clear" />
        {% endif %}
        {% if section.settings.blog_posts_per_row == 1 %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>


  <br class="clear" />
  <div class="sixteen columns">
    {% include 'pagination' %}
  </div>
{% endpaginate %}

</div>

{% schema %}

{
  "name": "Blog",
  "class": "blog-section",
  "settings": [
    {
      "type": "text",
      "id": "blogtitle",
      "label": "Featured blog title",
      "default": "Blog posts"
    },
    {
      "type": "blog",
      "id": "blog_widget_select",
      "label": "Featured Blog"
    },
    {
      "type": "range",
      "id": "home_page_articles",
      "label": "Posts",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "wide_display",
      "label": "Wide display",
      "default": true
    },
    {
      "type": "text",
      "id": "blog_main_title",
      "label": "Main blog title",
      "default": "Les recettes de l'épicurien"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner image",
      "info": "1800 x 800px recommended"
    },
    {
      "type": "checkbox",
      "id": "image_darken",
      "label": "Darken banner image",
      "default": false
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Subheading"
    },
    {
      "type": "range",
      "id": "blog_posts_per_row",
      "label": "Blog posts per row",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "blog_posts_per_page",
      "label": "Blog posts per page",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 12
    },
    {
     "type": "checkbox",
     "id": "blog_tags",
     "label": "Show blog post tags"
    },
    {
     "type": "checkbox",
     "id": "blog_author",
     "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "read_time",
      "label": "Show estimated read time",
      "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_date",
     "label": "Show date",
     "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_comment_count",
     "label": "Show comment count",
     "default": true
    },
    {
     "type": "checkbox",
     "id": "read_more_link",
     "label": "Show continue reading link for blog post excerpts",
     "default": true
    },
    {
     "type": "header",
     "content": "Sidebar"
    },
    {
      "type": "paragraph",
      "content": "Create a sidebar by adding content blocks."
    },
    {
      "type": "checkbox",
      "id": "toggle",
      "label": "Toggle sidebar content",
      "default": false
    },
    {
      "type": "text",
      "id": "text_link1",
      "label": "Text lien1"
    },
    {
      "type": "text",
      "id": "text_link2",
      "label": "Text lien2"
    },
    {
      "type": "url",
      "id": "link1",
      "label": "Lien 1"
    },
    {
      "type": "url",
      "id": "link2",
      "label": "Lien 2"
    }
  ],
  "blocks": [

    {
      "type": "post_tags",
      "name": "Blog post tags",
      "limit": 1
    },
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "link_list",
          "id": "custom_menu_linklist",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter sign up form",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "newsletter_title",
          "label": "Heading",
          "default": "Subscribe"
        },
        {
          "type": "richtext",
          "id": "newsletter_text",
          "label": "Subheading",
          "default": "<p>Sign up to get the latest on sales, new releases and more …</p>"
        }
      ]
    },
    {
      "type": "page",
      "name": "Page",
      "settings": [
        {
          "type": "page",
          "id": "content_page",
          "label": "Page"
        }
      ]
    },
    {
      "type": "recent_posts",
      "name": "Recent blog posts",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "blog_post_count",
          "label": "Display blog posts",
          "options": [
            {
              "value": "2",
              "label": "2"
            },
            {
              "value": "5",
              "label": "5"
            },
            {
              "value": "10",
              "label": "10"
            }
          ],
          "default": "10"
        }
      ]
    },
    {
      "type": "search",
      "name": "Search form",
      "limit": 1
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Text area can be used for details about blog authors or general information.</p>"
        }
      ]
    }
  ]
}

{% endschema %}
